<h1>Movies!</h1>

<h2><%= link_to "Add a Movie!", new_movie_path %></h2>

<hr>

<h4>Search for a movie by Title, Director or Keyword</h4>
<%= form_tag movies_path, method: "get" do %>
  <div>
    <%= text_field_tag :search, params[:search] %>
    
    <%= select_tag(:runtime, options_for_select([['Any Length', 1], ['Under 90 Minutes', 2], ['Between 90 and 120 Minutes', 3], ['More than 2 Hours', 4]], params[:runtime])) %>

    <%= submit_tag "Search", name: nil %> 
  </div>
<% end %>

<hr>

<% @movies.each do |movie| %>
  <%= link_to image_tag(movie.image_url(:thumb)), movie_path(movie) %>
  <hr>
<% end %>