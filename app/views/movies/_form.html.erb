<%= form_for @movie, :html => {:multipart => true} do |f| %>
  
  <% if @movie.errors.any? %>
    <div>
      <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being submitted:
      <ul>
        <% @movie.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label "Title" %><br>
    <%= f.text_field "title" %>
  </div>
  <div>
    <%= f.label "Director" %><br>
    <%= f.text_field "director" %>
  </div>
  <div>
    <%= f.label "Runtime (In Minutes)" %><br>
    <%= f.text_area "runtime_in_minutes" %>
  </div>
    <div>
    <%= f.label "Description" %><br>
    <%= f.text_area "description" %>
  </div>
  <div>
    <%= f.label "Upload Poster Image" %><br>
    <%= f.file_field "image" %>
  </div>
  <div>
    <%= f.label "Or link to Image" %><br>
    <%= f.text_field "remote_image_url" %>
  </div>

    <div>
    <%= f.label "Release Date (YYYY-MM-DD)" %><br>
    <%= f.text_area "release_date" %>
  </div>
  <div>
    <%= f.submit "Save" %> 
  </div>

<% end %>