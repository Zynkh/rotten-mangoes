<footer>
  <small>
    <% if current_user %>
      Signed in as <%= current_user.full_name %> (<%= link_to "Log out", session_path("current"), method: :delete %>)
    <% else %>
      <%= link_to "Log In", new_session_path %> | <%= link_to "Sign Up", new_user_path %>
    <% end %>
          
      <% if mimicing? %>
        |Actually logged in as <%= actual_user.full_name %>. <%= link_to "Switch back", session_path("current"), method: :delete %>. |
      <% end %>

  </small>


  <small>
    <% if admin? %>
      <%= link_to "Admin Tools", admin_users_path %>
    <% end %>
  </small>

</footer>