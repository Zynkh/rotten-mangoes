<%= link_to 'Back to Users', admin_users_path %>

<h2><%= @user.full_name %> 
  <small><%= link_to 'Switch view to this user', switch_admin_user_path(@user), method: :put %></small>
</h2>
  
<h3>email address: <%= @user.email %></h3>
<h3>First Created: <%= @user.created_at %></h3>
<h3>Last Updated: <%= @user.updated_at %></h3>
<h3>Is Admin? <%= @user.admin %></h3>

<hr>

<h3>
  <%= link_to "Edit",  edit_admin_user_path(@user) %>
  |
  <%= link_to "Delete", admin_user_path(@user), method: :delete, confirm: "You sure?" %>
</h3>